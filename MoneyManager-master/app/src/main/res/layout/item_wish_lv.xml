<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation = "vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/wish_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="愿望名称"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/wish_iv_done"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:src="@mipmap/unselected"
            android:onClick="onClick"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ProgressBar
            android:id="@+id/wish_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            style="?android:progressBarStyleHorizontal"
            />
        <TextView
            android:id="@+id/wish_tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/wish_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500/1000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/wish_bar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wish_tv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="计划：每月存1000元"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/wish_tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="本存储周期目标未完成"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>